<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Kapat Butonu Sağ Üste Yerleştirildi -->
    <ImageButton
        android:id="@+id/btn_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="Kapat"
        android:padding="8dp" />

    <!-- Başlık TextView Üste Yerleştirildi -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teslimat Sonuçları"
        android:fontFamily="@font/basic"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="5dp"
        android:layout_toLeftOf="@id/btn_close_dialog" />

    <!-- RecyclerView, Başlık Altına Yerleştirildi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dialog_title"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"/>

</RelativeLayout>
