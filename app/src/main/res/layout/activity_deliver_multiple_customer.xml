<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/light_blue2"
android:padding="12dp"
tools:context=".ui.delivermultiplecustomerwaybill.DeliverMultipleCustomerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="vertical">

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:ms_background_color="@color/light_gray"
            app:ms_hint_color="@color/gray"
            app:ms_text_color="@color/gray" />

        <com.manojbhadane.QButton
            android:id="@+id/btn_musteri_barkod_okut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="150dp"
            android:text="Barkod Okut"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:qb_backgroundColor="@color/btnBlue1"
            app:qb_radius="0"
            app:qb_strokeColor="@color/color_1_dark"
            app:qb_strokeWidth="1" />

    </LinearLayout>

</RelativeLayout>